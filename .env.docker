# Docker Environment Configuration
# Copy this file to .env and modify as needed

# Application Settings
COMPOSE_PROJECT_NAME=stock-management

# Database Settings
MYSQL_ROOT_PASSWORD=root_password
MYSQL_DATABASE=stock_management
MYSQL_USER=stock_user
MYSQL_PASSWORD=stock_password

# Ports Configuration
API_PORT=8000
APP_PORT=3000
MYSQL_PORT=3306
REDIS_PORT=6379

# Network Configuration
NETWORK_NAME=stock_network

# Volume Configuration
MYSQL_DATA_VOLUME=mysql_data
REDIS_DATA_VOLUME=redis_data

# Development Settings
DEV_MODE=false

# Security Settings
JWT_SECRET=your_very_long_jwt_secret_key_here_make_it_secure
APP_KEY=base64:YourGeneratedAppKeyHere

# API URL Configuration
API_URL=http://localhost:8000
APP_URL=http://localhost:3000
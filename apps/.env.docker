# Next.js Application Configuration
NODE_ENV=production

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Application Settings
NEXT_PUBLIC_APP_NAME="Stock Management System"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Features Configuration
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_PWA=false

# Security Settings
NEXT_PUBLIC_SESSION_TIMEOUT=3600000
NEXT_PUBLIC_REFRESH_TOKEN_TIMEOUT=604800000

# File Upload Settings
NEXT_PUBLIC_MAX_FILE_SIZE=2097152
NEXT_PUBLIC_ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp"

# UI Configuration
NEXT_PUBLIC_ITEMS_PER_PAGE=10
NEXT_PUBLIC_THEME=light

# Development Settings (when NODE_ENV=development)
NEXT_TELEMETRY_DISABLED=1
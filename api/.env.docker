# Application Configuration
APP_NAME="Stock Management API"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost:8000

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=stock_management
DB_USERNAME=stock_user
DB_PASSWORD=stock_password
DB_SSLMODE=disable

# MySQL SSL Configuration - Disable all SSL verification
MYSQL_ATTR_SSL_VERIFY_SERVER_CERT=false
MYSQL_ATTR_SSL_CA=
MYSQL_ATTR_SSL_CAPATH=
MYSQL_ATTR_SSL_CERT=
MYSQL_ATTR_SSL_CIPHER=
MYSQL_ATTR_SSL_KEY=

# JWT Configuration
JWT_SECRET=your_very_long_jwt_secret_key_here_make_it_secure
JWT_TTL=60

# Cache Configuration
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration (Optional)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@stockmanagement.com"
MAIL_FROM_NAME="${APP_NAME}"

# Filesystem Configuration
FILESYSTEM_DRIVER=local

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# File Upload Configuration
MAX_UPLOAD_SIZE=2048

# Log Configuration
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug